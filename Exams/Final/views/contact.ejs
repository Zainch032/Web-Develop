<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Submit Complaint</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .card {
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    .form-text {
      font-size: 0.9rem;
    }
    #charCount {
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card p-4">
          <h3 class="text-center mb-4">Submit a Complaint</h3>

          <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
              <strong>Success!</strong> Your complaint has been submitted.
            </div>
          <% } %>

          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
              <strong>Error:</strong> <%= error %>
            </div>
          <% } %>

          <form action="/contact" method="POST">
            <!-- Order ID -->
            <div class="mb-3">
              <label for="orderId" class="form-label">Order ID</label>
              <input type="text" class="form-control" id="orderId" name="orderId" required />
            </div>

            <!-- Message -->
            <div class="mb-3">
              <label for="message" class="form-label">Complaint Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" maxlength="1000" required></textarea>
              <div class="form-text">Max 1000 characters. <span id="charCount">0/1000</span></div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>

          <div class="text-center mt-3">
            <a href="/shop" class="btn btn-link">Back to Shop</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS + Character Counter -->
  <script>
    const messageInput = document.getElementById("message");
    const charCount = document.getElementById("charCount");

    messageInput.addEventListener("input", function () {
      const length = messageInput.value.length;
      charCount.textContent = `${length}/1000`;
    });
  </script>
</body>
</html>
