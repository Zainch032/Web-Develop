<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container py-5">
    <h2 class="mb-4 text-center">My Order History</h2>
    <% if (orders.length === 0) { %>
      <div class="alert alert-info text-center">You have not placed any orders yet.</div>
    <% } else { %>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
            <tr>
              <td><%= order._id %></td>
              <td><%= order.orderDate ? new Date(order.orderDate).toLocaleString() : 'N/A' %></td>
              <td><%= order.status || 'N/A' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
    <div class="text-center mt-4">
      <a href="/shop" class="btn btn-secondary">Back to Shop</a>
    </div>
  </div>
</body>
</html> 