<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Checkout | Thought Clothing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #ce4ea8;
      --primary-light: #f0daeb;
      --primary-dark: #9c4f86;
      --highlight-color: #c679c4;
      --light-bg: #fdf9fc;
      --text-dark: #333;
      --text-light: #666;
    }

    body {
      background: linear-gradient(135deg, var(--light-bg), #ffffff);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      color: var(--text-dark);
    }

    .container {
      max-width: 1000px;
      margin: 40px auto;
    }

    .checkout-container {
      background-color: white;
      padding: 40px 30px;
      border-radius: 18px;
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.07);
      animation: fadeIn 0.5s ease-in;
      border: 1px solid rgba(206, 78, 168, 0.1);
    }

    h1 {
      color: var(--primary-color);
      font-weight: 800;
      text-align: center;
      margin-bottom: 30px;
      position: relative;
      padding-bottom: 15px;
    }

    h1::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 3px;
      background: linear-gradient(90deg, var(--primary-color), var(--highlight-color));
      border-radius: 3px;
    }

    h3 {
      color: var(--primary-dark);
      margin-top: 20px;
      margin-bottom: 20px;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    h3 i {
      color: var(--highlight-color);
    }

    .form-label {
      font-weight: 600;
      color: var(--text-dark);
      margin-bottom: 8px;
    }

    .form-control {
      border-radius: 10px;
      padding: 12px 15px;
      font-size: 15px;
      transition: all 0.3s;
      border: 1px solid #e0e0e0;
      box-shadow: none;
    }

    .form-control:focus {
      border-color: var(--highlight-color);
      box-shadow: 0 0 0 0.15rem rgba(198, 121, 196, 0.25);
    }

    .order-summary {
      margin-top: 30px;
      background: linear-gradient(135deg, #fff, var(--primary-light));
      padding: 25px;
      border-radius: 12px;
      border-left: 4px solid var(--highlight-color);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.03);
    }

    .table {
      --bs-table-bg: transparent;
    }

    .table th {
      font-weight: 700;
      color: var(--primary-dark);
      border-bottom: 2px solid var(--primary-light);
    }

    .table td {
      border-bottom: 1px solid var(--primary-light);
    }

    .table th, .table td {
      vertical-align: middle;
      padding: 12px;
    }

    .pay-later-btn {
      background: linear-gradient(135deg, var(--primary-color), var(--highlight-color));
      color: white;
      padding: 16px 35px;
      border: none;
      font-size: 17px;
      font-weight: bold;
      border-radius: 12px;
      margin-top: 25px;
      box-shadow: 0 8px 25px rgba(206, 78, 168, 0.4);
      transition: all 0.3s ease;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      letter-spacing: 0.5px;
    }

    .pay-later-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(206, 78, 168, 0.5);
      background: linear-gradient(135deg, var(--highlight-color), var(--primary-color));
    }

    .pay-later-btn:active {
      transform: translateY(0);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .container {
        margin: 20px auto;
        padding: 0 15px;
      }
      
      .checkout-container {
        padding: 30px 20px;
      }
      
      h1 {
        font-size: 28px;
      }
    }

    /* Floating label effect */
    .form-floating {
      margin-bottom: 1rem;
    }
    
    /* Section divider */
    .section-divider {
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--primary-light), transparent);
      margin: 30px 0;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="checkout-container">
      <h1>Complete Your Order</h1>

      <form id="checkoutForm" action="/cart/place-order" method="POST">
        <div class="row">
          <div class="col-md-6">
            <h3> Personal Information</h3>
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" readonly>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
          </div>

          <div class="col-md-6">
            <h3> Shipping Details</h3>
            <div class="mb-3">
              <label for="street" class="form-label">Street Address</label>
              <input type="text" class="form-control" id="street" name="street" required>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="state" class="form-label">State/Province</label>
                <input type="text" class="form-control" id="state" name="state" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="zipCode" class="form-label">ZIP/Postal Code</label>
                <input type="text" class="form-control" id="zipCode" name="zipCode" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" class="form-control" id="country" name="country" required>
              </div>
            </div>
          </div>
        </div>

        <div class="section-divider"></div>

        <div class="order-summary">
          <h3><i class="fas fa-receipt"></i> Order Summary</h3>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Item</th>
                  <th class="text-center">Quantity</th>
                  <th class="text-end">Price</th>
                </tr>
              </thead>
              <tbody>
                <% cart.forEach(item => { %>
                <tr>
                  <td><%= item.product.title %></td>
                  <td class="text-center"><%= item.quantity %></td>
                  <td class="text-end">£<%= formatPrice(item.product.price * item.quantity) / 100.00 %></td>
                </tr>
                <% }); %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="2" class="text-end"><strong>Subtotal:</strong></td>
                  <td class="text-end">£<%= formatPrice(total) / 100.00 %></td>
                </tr>
                <tr>
                  <td colspan="2" class="text-end"><strong>Shipping:</strong></td>
                  <td class="text-end">Free</td>
                </tr>
                <tr>
                  <td colspan="2" class="text-end"><strong class="h5">Total:</strong></td>
                  <td class="text-end"><strong class="h5 text-primary">£<%= formatPrice(total) / 100.00 %></strong></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>

        <div class="d-grid">
          <button type="submit" class="pay-later-btn">
            <i class="fas fa-money-bill-wave"></i> Place Order & Pay Later
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const btn = document.querySelector(".pay-later-btn");
      const form = document.getElementById('checkoutForm');

      // Enhanced button hover effect
      btn.addEventListener("mouseover", () => {
        btn.style.transform = "translateY(-3px)";
      });

      btn.addEventListener("mouseout", () => {
        btn.style.transform = "translateY(0)";
      });

      // Form submission with better feedback
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        
        // Simple form validation
        let isValid = true;
        const requiredFields = form.querySelectorAll('[required]');
        
        requiredFields.forEach(field => {
          if (!field.value.trim()) {
            field.style.borderColor = '#ff6b6b';
            isValid = false;
          } else {
            field.style.borderColor = '#e0e0e0';
          }
        });
        
        if (!isValid) {
          alert('Please fill in all required fields');
          return;
        }
        
        if (confirm('Confirm your order? You\'ll pay when your items arrive.')) {
          // Show loading state
          btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
          btn.disabled = true;
          
          // Simulate processing delay
          setTimeout(() => {
            alert('Order placed successfully! Your items will be shipped soon.');
            form.submit();
          }, 1500);
        }
      });
    });
  </script>
</body>
</html>